<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wilson_robot">

  <!-- Arguments (all values should be in meters when passed) -->
  <xacro:arg name="body_length" default="0.24"/>
  <xacro:arg name="body_width" default="0.10"/>
  <xacro:arg name="body_height" default="0.06"/>

  <xacro:arg name="link1_len" default="0.05"/>
  <xacro:arg name="link2_len" default="0.10"/>
  <xacro:arg name="link3_len" default="0.09"/>

  <!-- hip positions (meters) -->
  <xacro:arg name="hip_front_x" default="0.12"/>
  <xacro:arg name="hip_back_x" default="-0.12"/>
  <xacro:arg name="hip_left_y" default="0.05"/>
  <xacro:arg name="hip_right_y" default="-0.05"/>

  <!-- Joint limits (radians) -->
  <xacro:arg name="hip_lower" default="-1.5708"/>
  <xacro:arg name="hip_upper" default="1.5708"/>
  <xacro:arg name="thigh_lower" default="-1.5708"/>
  <xacro:arg name="thigh_upper" default="1.5708"/>
  <xacro:arg name="shin_lower" default="0.0"/>
  <xacro:arg name="shin_upper" default="2.35619"/>

  <!-- Base link (body) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="${xacro.arg('body_length')} ${xacro.arg('body_width')} ${xacro.arg('body_height')}"/>
      </geometry>
      <material name="grey">
        <color rgba="0.6 0.6 0.6 1.0"/>
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="${xacro.arg('body_length')} ${xacro.arg('body_width')} ${xacro.arg('body_height')}"/>
      </geometry>
    </collision>
  </link>

  <!-- Macro to create a 3-DOF leg; joint names match controller: <LEG>_theta1, <LEG>_theta2, <LEG>_theta3 -->
  <!-- Include external leg macro and instantiate four legs at the bottom corners of the body -->
  <xacro:include filename="leg_macro.xacro"/>
  <!-- compute hip z as half body height below base_link origin -->
  <xacro:property name="hip_z" value="${-float(xacro.arg('body_height'))/2.0}"/>

  <xacro:leg prefix="LF" x="${xacro.arg('hip_front_x')}" y="${xacro.arg('hip_left_y')}" z="${hip_z}" leg_upper="${xacro.arg('link1_len')}" leg_lower="${xacro.arg('link2_len')}" leg_width="0.02"/>
  <xacro:leg prefix="RF" x="${xacro.arg('hip_front_x')}" y="${xacro.arg('hip_right_y')}" z="${hip_z}" leg_upper="${xacro.arg('link1_len')}" leg_lower="${xacro.arg('link2_len')}" leg_width="0.02"/>
  <xacro:leg prefix="LB" x="${xacro.arg('hip_back_x')}" y="${xacro.arg('hip_left_y')}" z="${hip_z}" leg_upper="${xacro.arg('link1_len')}" leg_lower="${xacro.arg('link2_len')}" leg_width="0.02"/>
  <xacro:leg prefix="RB" x="${xacro.arg('hip_back_x')}" y="${xacro.arg('hip_right_y')}" z="${hip_z}" leg_upper="${xacro.arg('link1_len')}" leg_lower="${xacro.arg('link2_len')}" leg_width="0.02"/>

</robot>
